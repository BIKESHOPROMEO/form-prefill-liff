<!DOCTYPE html>
<html>
<head>
  <title>整備予約 自動入力フォーム</title>
  <meta charset="UTF-8">
  <script src="https://static.line-scdn.net/liff/edge/2/sdk.js"></script>
</head>
<body>
  <h1>整備予約ページに移動します...</h1>
  <script>
    const liffId = "2007826137-z2n4agnK";  // ← あなたのLIFF ID
    const formBaseUrl = "https://docs.google.com/forms/d/e/FORM_ID/viewform?usp=pp_url";  // ← 実際のフォームURL

    const entryIds = {
      name: "entry.1234567890",
      phone: "entry.2345678901"
    };

    async function main() {
      await liff.init({ liffId });
      if (!liff.isLoggedIn()) liff.login();

      const profile = await liff.getProfile();
      const displayName = encodeURIComponent(profile.displayName);
      const phone = encodeURIComponent(liff.getDecodedIDToken().phone_number || "");

      const prefilledUrl = `${formBaseUrl}&${entryIds.name}=${displayName}&${entryIds.phone}=${phone}`;
      window.location.href = prefilledUrl;
    }

    main();
  </script>
</body>
</html>